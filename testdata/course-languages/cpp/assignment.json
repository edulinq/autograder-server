{
    "id": "cpp-simple",
    "name": "A Simple C++ Assignment",
    "static-files": [
        "grader.sh",
        "grader.cpp",
        "assignment.h"
    ],
    "image": "edulinq/grader.base-ubuntu",
    "invocation": ["bash", "./grader.sh"],
    "post-static-docker-commands": [
        "RUN apt-get update",
        "RUN apt-get install -y build-essential"
    ],
    "post-submission-files-ops": [
        ["cp", "input/assignment.cpp", "work/assignment.cpp"]
    ],
    "analysis-options": {
        "include-patterns": [
            "assignment.cpp"
        ],
        "template-files": [
            "test-submissions/not-implemented/assignment.cpp"
        ]
    }
}
